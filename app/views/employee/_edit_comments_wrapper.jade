.comments-wrapper
  - comments = assessment.comment_questions
  .form-group
    .row.comments-i-b-wrapper
      - var splitclass = (comments.length == 1) ? 'col-sm-12' : 'col-sm-6'
      - var commentPlaceholder = (comments.length == 1) ? 'Comment' : 'Comment...'
      each comment, index in comments
        if index < 2
          each comment_answer in submission.comments
            if comment_answer.question.toString() == comment._id.toString()
              div(class=splitclass)
                .txt-area-wrapper
                  .comments-title= comment.title
                  textarea.form-control(rows='3', placeholder='#{commentPlaceholder}', name='comments[#{comment._id}]', value='#{comment_answer.answerText}')= comment_answer.answerText
    if comments[2]
      .comments-title= comments[2].title
      .txt-area-wrapper
        textarea.form-control(rows='3', placeholder='Comment', name='comments[#{comments[2]._id}]', value='#{submission.comments[2].answerText}')= submission.comments[2].answerText
